-- Discovery: Find modifier-related columns in SoftAR setup views
-- Looking for MOD columns configured on procedures/tests/CPT setup

-- 1. All columns with 'MOD' in the name across ARE setup views
SELECT
  TABLE_NAME,
  COLUMN_NAME,
  DATA_TYPE,
  DATA_LENGTH
FROM ALL_TAB_COLUMNS
WHERE TABLE_NAME LIKE 'V\_S\_ARE\_%' ESCAPE '\'
  AND COLUMN_NAME LIKE '%MOD%'
ORDER BY TABLE_NAME, COLUMN_ID;

-- 2. Broaden to transactional ARE views too, in case modifiers live there
SELECT
  TABLE_NAME,
  COLUMN_NAME,
  DATA_TYPE,
  DATA_LENGTH
FROM ALL_TAB_COLUMNS
WHERE TABLE_NAME LIKE 'V\_P\_ARE\_%' ESCAPE '\'
  AND COLUMN_NAME LIKE '%MOD%'
ORDER BY TABLE_NAME, COLUMN_ID;

-- 3. Full column list for V_S_ARE_BILLRULES â€” need join keys and BRCCIMOD context
SELECT COLUMN_NAME, DATA_TYPE, DATA_LENGTH
FROM ALL_TAB_COLUMNS
WHERE TABLE_NAME = 'V_S_ARE_BILLRULES'
ORDER BY COLUMN_ID;
